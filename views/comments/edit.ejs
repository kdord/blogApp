<% include ../partials/header%>

<div class="container">
	<div class="row ">

		<h1>Edit Comment</h1>
		
			<div style="width: 30%; margin: 25px auto">
				<form action="/posts/<%=post_id%>/comments" method="POST">
					<div class="form-group">
						<input type="text" class="form-control" name="comment[text]" value="<%=comment.text %>">
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-success btn-block">Submit!</button>
					</div>
				</form>
		
				<a href="/posts/<%=post_id%>" class="btn btn-primary">Go Back</a>
			</div>
	</div>
</div>


<% include ../partials/footer%>