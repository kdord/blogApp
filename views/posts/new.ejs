<%include ../partials/header %>

<script type="application/x-javascript">

tinymce.init({
    selector:'#TinyMCENew',
 height:"555",
  menubar: false,
  plugins: [
    'advlist autolink lists link image charmap print preview anchor',
    'searchreplace visualblocks code fullscreen',
    'insertdatetime media table contextmenu paste code'
  ],
  toolbar: 'undo redo | insert | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
  content_css: [
    '//fonts.googleapis.com/css?family=Lato:300,300i,400,400i',
    '//www.tinymce.com/css/codepen.min.css']

});

</script>

<div class="container">
    <h1>Create a New Post</h1>
    <div>
        <form action="/posts" method="POST">
            <div class="form-group">

                <input class="form-control" type="text" name="title" placeholder="title">
            </div>
            <!-- <div class="form-group">
						<input class="form-control" type="text" name="author" placeholder="author">
					</div> -->
            
         
            <div class="form-group">

                <textarea class="form-control" name="text" id="TinyMCENew" cols="30" rows="25" placeholder="enter your text"></textarea>
               
            </div>
			<div class="isPrivate d-block">
				<p>Is Private?</p>
	            <div class="form-check form-check-inline form-check-isPrivate">
	            	<input type="radio" class="form-check-input" name="inlineRadioOptions" value="true" id="isPrivateRadio1">
	            	<label for="isPrivateRadio1" class="form-check-label">Yes</label>
	            </div>
	             <div class="form-check form-check-inline form-check-isPrivate">
	            	<input type="radio" class="form-check-input" name="inlineRadioOptions" value="false" id="isPrivateRadio2" >
	            	<label for="isPrivateRadio2" class="form-check-label">No</label>
	            </div>
	            
			</div>
            <div class="d-flex flex-row justify-content-between submit-goBack-button">
             
                <button class="btn ">Submit!</button>
            </div>
        </form>
    </div>
    
</div>
<%include ../partials/footer %>