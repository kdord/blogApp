<%include ../partials/header %>
<div class="container">
    <h1>Create a New Post</h1>
    <div>
        <form action="/posts" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="title" placeholder="title">
            </div>
            <!-- <div class="form-group">
						<input class="form-control" type="text" name="author" placeholder="author">
					</div> -->
            
         
            <div class="form-group">
                <input class="form-control" type="text" name="text" placeholder="enter your text">
            </div>
			<div class="isPrivate d-block">
				<p>Is Private?</p>
	            <div class="form-check form-check-inline form-check-isPrivate">
	            	<input type="radio" class="form-check-input" name="inlineRadioOptions" value="true" id="isPrivateRadio1">
	            	<label for="isPrivateRadio1" class="form-check-label">Yes</label>
	            </div>
	             <div class="form-check form-check-inline form-check-isPrivate">
	            	<input type="radio" class="form-check-input" name="inlineRadioOptions" value="false" id="isPrivateRadio2" >
	            	<label for="isPrivateRadio2" class="form-check-label">No</label>
	            </div>
	            
			</div>
            <button class="btn btn-primary">Submit!</button>
        </form>
    </div>
    <div>
        <a href="/posts">Go Back</a>
    </div>
</div>
<%include ../partials/footer %>