<% include  ../partials/header%>
	
	<div class="container">
		<h2><%= post.title %></h2>
		<h6><%= post.date.toDateString() %></h6>
		<%if(post.isPrivate){%>
			<h6>Private</h6>
		<%} else {%>
			<h6>Public</h6>
		<%}%>
		<p><%= post.text %></p>
		<p>
			<em>Submitted By <%= post.author.username%></em>
		</p>
		<a href="/posts/<%=post._id%>/edit" class = "btn btn-info">Edit</a>
		<form action="/posts/<%= post._id %>?_method=DELETE" class="delete-form" method="POST">
			<button class="btn btn-danger">Delete</button>
		</form>
		<hr>
		<div class="comments">
			<a class="btn btn-primary" href="/posts/<%=post._id%>/comments/new">Add New Comment</a>
			<%post.comments.forEach(function (comment) {%>
				<div class="row">
					<div class="col-md-12">
						<strong>
							<%= comment.author.username%>
						</strong>
						<p>
							<%=comment.text%>
						</p>
						
						<a href="/posts/<%=post._id%>/comments/<%=comment._id%>/edit" class="btn btn-xs btn-warning">Edit</a>
						<form class="delete-form" action="/posts/<%=post._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST" >
							<button class="btn btn-xs btn-danger">Delete</button>
						</form>

					</div>
				</div>
			<%})%>
		</div>
	</div>	
	


<% include  ../partials/footer%>