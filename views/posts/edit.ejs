<%include ../partials/header %>
	<div class="container">
			<h1>Edit Post</h1>
			<div>
				<form action="/posts/<%=post._id%>?_method=PUT" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="post[title]" value="<%= post.title %>">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="post[author]" value="<%= post.author %>">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="post[text]" value="<%= post.text %>">
					</div>
					<button class="btn btn-primary">Submit!</button>
					<div class="isPrivate d-block">
						<p>Is Private?</p>
			            <div class="form-check form-check-inline form-check-isPrivate">
			            	<input type="radio" class="form-check-input" name="inlineRadioOptions" value="true" id="isPrivateRadio1">
			            	<label for="isPrivateRadio1" class="form-check-label">Yes</label>
			            </div>
			             <div class="form-check form-check-inline form-check-isPrivate">
			            	<input type="radio" class="form-check-input" name="inlineRadioOptions" value="true" id="isPrivateRadio2" checked>
			            	<label for="isPrivateRadio2" class="form-check-label">No</label>
			            </div>
			            
					</div>
				</form>
			</div>
			<div>
				<a href="/posts">Go Back</a>
			</div>

	</div>
<%include ../partials/footer %>